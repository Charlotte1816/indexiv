---
import BaseLayout from "../../components/BaseLayout.astro";
import { getCollection } from "astro:content";
const entries = await getCollection("ja");
const categories = [...new Set(entries.map(e => e.data.category))];
const catnames: Record<string, string> = {
	"peskin": "Peskin-Schroederを読む",
}
const lang = "ja";
const type = "website";
const title = "Home";
const description = "理論物理学に関するノートをまとめています。教科書の行間埋めの成果をまとめ共有することを目的に運営しています。扱う内容はhep-th分野に関連したものになると思います。管理人は現在，物理学科の大学院生で，勉強と研究の傍らでこのサイトを運営しています。皆様の一助になれば幸いです。";
---
<BaseLayout lang={lang} type={type} title={title} description={description}>
	<h1>{title}</h1>
	<p>{description}</p>
	<h2>Notes</h2>
	<ul>
		{categories.map(cat => (
			<li>
				<a href={`/${lang}/${cat}/`}>{catnames[cat]}</a>
			</li>
		))}
	</ul>
</BaseLayout>
