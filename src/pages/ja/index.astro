---
import BaseLayout from "../../components/BaseLayout.astro";
import { getCollection } from "astro:content";
import { LABELS } from "./labels";

const entries = await getCollection("ja");
const categories = [
    ...new Set(
        entries.map(e => e.slug.split('/')[0])
    )
];

const lang = "ja";
const type = "website";
const title = "Home";
const description = "理論物理学に関する個人的なノート";
---
<BaseLayout lang={lang} type={type} title={title} description={description}>
    <h1>{title}</h1>
    <p>{description}</p>
    <ul>
        {categories.map(category => (
            <li>
            <a href={`/ja/${category}/`}>
                {LABELS[category]}
            </a>
            </li>
        ))}
    </ul>
</BaseLayout>