---
// レイアウト読み込み
import BaseLayout from "../../components/BaseLayout.astro"
// 記事データを取得
import { getCollection } from "astro:content";
// jaコレクションの全記事を取得
const entries = await getCollection("ja");
// カテゴリの重複を排除してリスト化
const categories = [...new Set(entries.map(e => e.data.category))];

// カテゴリ名と日本語表記の対応表
const catnames: Record<string, string> = {
	"quantum-field-theory": "場の量子論",
	"string-theory": "弦理論",
}

// props
const lang = "ja";
const type = "website";
const title = "Home";
const description = "理論物理学に関する情報を収集・共有しています。";
---
<!-- レイアウト呼び出し -->
<BaseLayout lang={lang} type={type} title={title} description={description}>
	<h1>{title}</h1>
	<p>{description}</p>
	<h2>Categories</h2>
	<ul>
		{categories.map(cat => (
			<li>
				{/* リンクを日本語表記 */}
				<a href={`/${lang}/${cat}/`}>{catnames[cat]}</a>
			</li>
		))}
	</ul>
</BaseLayout>
