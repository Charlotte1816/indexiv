---
// BaseLayoutからURLセグメントを受け取る
const { currentLocale, enPath, jaPath } = Astro.props;
// 言語切替のURLを決定
let switchPath;
if (currentLocale === 'en') {
    switchPath = jaPath;
} else if (currentLocale === 'ja') {
    switchPath = enPath;
}
---
<header>
    <!-- site-name -->
    <div class="site-name">
        Inde<i class="fa-solid fa-x"></i>iv
    </div>

    <!-- nav -->
    <nav class="header-nav">
        <a href={`/${currentLocale}/`}>Home</a>
        <span class="header-separator">|</span>
        <a href={`/${currentLocale}/about`}>About</a>
        <span class="header-separator">|</span>
        <a href={`/${currentLocale}/misc`}>Misc</a>
    </nav>

    <!-- button -->
    <div class="button">
        <a href={switchPath} class="lang-switch" aria-label="Language Switch"><i class="fa-solid fa-language"></i></a>
        <a href="/rss.xml" class="rss" aria-label="RSS Feed"><i class="fa-solid fa-rss"></i></a>
    </div>
</header>

<style>
    header {
        display: grid;
        grid-template-columns: auto 1fr auto;
        align-items: center;
    }

    .site-name {
        grid-column: 1;
        grid-row: 1;
        font-size: x-large;
        font-weight: bold;
        font-family: serif;
    }

    .site-name i {
        margin: -0.2rem;
        color: var(--accent-orange);
    }

    .header-nav {
        grid-column: 1;
        grid-row: 2;
        font-size: small;
    }

    .header-separator {
        margin: 0 0.2rem;
    }

    .button {
        grid-column: 3;
        grid-row: 1 / span 2;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .lang-switch {
        font-size: large;
    }

    .rss {
        font-size: large;
    }
</style>